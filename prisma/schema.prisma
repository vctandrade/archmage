generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id
  spells      UserSpell[]
  scrolls     Int         @default(0)
  lastDailyAt DateTime?   @db.Timestamptz()
}

model UserSpell {
  user   User   @relation(fields: [userId], references: [id])
  userId String
  id     Int
  amount Int    @default(0)

  @@id([userId, id])
}

model TradeOffer {
  channelId String
  messageId String
  userId    String
  give      Int[]
  receive   Int[]
  expiresAt DateTime @db.Timestamptz()

  @@id([channelId, messageId])
}

model Shop {
  channelId String      @id
  messageId String?
  spells    ShopSpell[]
  updatesAt DateTime    @db.Timestamptz()
}

model ShopSpell {
  Shop      Shop   @relation(fields: [channelId], references: [channelId])
  channelId String
  id        Int
  amount    Int    @default(0)

  @@id([channelId, id])
}
